<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
  <servlet>
    <servlet-name>memoreez</servlet-name>
    <servlet-class>com.google.appengine.demos.memoreez.MemoreezServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>admin</servlet-name>
    <servlet-class>com.google.appengine.demos.memoreez.AdminServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>memoreez</servlet-name>
    <url-pattern>/memoreez</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>admin</servlet-name>
    <url-pattern>/admin</url-pattern>
  </servlet-mapping>
  <security-constraint>
    <web-resource-collection>
      <url-pattern>/admin</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>admin</role-name>
    </auth-constraint>
  </security-constraint>
</web-app>
